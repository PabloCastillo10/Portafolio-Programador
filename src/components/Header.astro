<header class="fixed top-0 left-0 right-0 w-full transition-all duration-500 ease-in-out transform bg-gray-900/80 backdrop-blur-md border-b border-gray-800 z-50"
        id="main-header">
  <div class="container mx-auto px-6 py-4 flex justify-center items-center">
    <nav class="flex flex-row gap-x-8 md:gap-x-10">
      {[
        { href: "#top", text: "Inicio" },
        { href: "#habilidades", text: "Habilidades" },
        { href: "#curriculum", text: "Curriculum" },
        { href: "#proyectos-vista", text: "Proyectos" },
        { href: "#contacto", text: "Contacto" }
      ].map((item) => (
        <a 
          href={item.href} 
          class="relative text-gray-300 hover:text-white transition-colors duration-300 group"
        >
          {item.text}
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-400 to-blue-400 transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
    </nav>
  </div>
</header>

<script is:inline>
  // Efecto de header que se esconde al hacer scroll hacia abajo
  let lastScroll = 0;
  const header = document.getElementById('main-header');
  
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll <= 0) {
      header.classList.remove('shadow-lg');
      header.classList.remove('-translate-y-full');
      return;
    }
    
    if (currentScroll > lastScroll && !header.classList.contains('-translate-y-full')) {
      // Scroll hacia abajo
      header.classList.add('-translate-y-full');
    } else if (currentScroll < lastScroll && header.classList.contains('-translate-y-full')) {
      // Scroll hacia arriba
      header.classList.remove('-translate-y-full');
    }
    
    lastScroll = currentScroll;
  });
</script>

<style>
  /* Pequeña animación cuando la página carga */
  #main-header {
    animation: fadeInDown 0.5s ease-out;
  }
  
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>