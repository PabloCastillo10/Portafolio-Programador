---
interface Props {
    titulo: string
    porcentaje: string
    imagen? : string
}

const {titulo, porcentaje, imagen} = Astro.props;
---


<div
  class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
>
  <a href="#">
    <img class="w-20 h-20 mx-auto my-4" src={imagen} alt="" />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 text-dark"
      >
        {titulo}
      </h5>
    </a>
    <p class="mb-3 font-normal text-gray-700 text-dark">
      {porcentaje}
    </p>
  </div>
</div>
