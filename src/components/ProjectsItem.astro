---
interface Props {
    title?: string
    descripcion?: string
    tags : {
        name: string
        class: string
        icon: any
    }[]
    github: string
}
const { title, descripcion, tags, github } = Astro.props;
---

<article class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6 mb-8">
  <div class="flex justify-between items-start mb-4 gap-4">
    <div>
      <h3 class="text-2xl font-bold text-gray-900 dark:text-yellow-300 mb-2">{title}</h3>
      <p class="text-gray-700 dark:text-gray-300">{descripcion}</p>
    </div>
    
    <a 
      href={github} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex items-center gap-1 text-gray-700 dark:text-gray-300 hover:text-black dark:hover:text-yellow-300 transition-colors shrink-0"
      aria-label="GitHub Repository"
    >
