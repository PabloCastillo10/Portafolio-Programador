---
interface Props {
    titulo: string
    porcentaje: string
    imagen?: string
}

const { titulo, porcentaje, imagen } = Astro.props;
---

<div class="group relative overflow-hidden max-w-sm bg-gray-900/50 border border-gray-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 backdrop-blur-sm">
  <div class="absolute inset-0 bg-gradient-to-br from-purple-600/20 to-blue-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <div class="relative z-10 p-6">
    <div class="flex flex-col items-center">
      <div class="w-24 h-24 mb-4 flex items-center justify-center rounded-full bg-gray-800/50 group-hover:bg-gray-800/70 transition-all duration-300 group-hover:scale-110">
        {imagen && <img class="w-12 h-12 object-contain transition-all duration-300 group-hover:scale-110" src={imagen} alt={titulo} />}
      </div>
      
      <h3 class="mb-2 text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-400">
        {titulo}
      </h3>
      
      <div class="w-full mt-4">
        <div class="flex justify-between text-sm text-gray-300 mb-1">
          <span>Nivel:</span>
          <span>{porcentaje}</span>
        </div>
        <div class="w-full bg-gray-800 rounded-full h-2.5">
          <div 
            class="h-2.5 rounded-full bg-gradient-to-r from-purple-500 to-blue-500" 
            style={`width: ${porcentaje.replace('Porcentaje : ', '').trim()}`}
          ></div>
        </div>
      </div>
    </div>
  </div>
</div>